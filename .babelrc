{
  "presets": [
    "@babel/preset-env",
    "@babel/preset-react",
    "@babel/preset-flow",
  ],
  "plugins": [
    "transform-class-properties",
    [
      "babel-plugin-root-import",
      {
        "rootPathPrefix": "@/",
        "rootPathSuffix": "./src/modules",
      },
    ],
    [
      "@babel/plugin-transform-runtime",
      {
        "absoluteRuntime": false,
        "corejs": false,
        "helpers": true,
        "regenerator": true,
        "useESModules": false,
      },
    ],
  ],
}